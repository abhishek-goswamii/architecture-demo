{
    "name": "node-backend",
    "version": "1.0.0",
    "description": "Node.js Express Prisma Backend - Architecture Demo",
    "main": "dist/main.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/main.js",
        "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
        "test": "jest --verbose",
        "test:cover": "jest --verbose --coverage",
        "migrate": "ts-node src/scripts/migrate.ts",
        "db:generate": "npx prisma generate",
        "db:push": "npx prisma db push",
        "db:studio": "npx prisma studio",
        "lint": "eslint src/",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@prisma/client": "^5.22.0",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "uuid": "^9.0.1",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.13.5",
        "@types/uuid": "^9.0.8",
        "jest": "^29.7.0",
        "prisma": "^5.22.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.7.3"
    }
}